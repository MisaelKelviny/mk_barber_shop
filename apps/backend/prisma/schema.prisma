generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Professional {
  id                 Int        @id @default(autoincrement())
  name               String     @unique
  description        String
  imageUrl           String
  assessment         Float
  assessmentQuantity Int
  schedules          Schedule[]

  @@map("professional")
}

model Service {
  id            Int        @id @default(autoincrement())
  name          String     @unique
  description   String
  price         Float
  slotsQuantity Int
  imageUrl      String
  schedules     Schedule[]

  @@map("service")
}

model Schedule {
  id             Int          @id @default(autoincrement())
  clientEmail    String
  date           DateTime     @db.Timestamptz(3)
  professional   Professional @relation(fields: [professionalId], references: [id])
  professionalId Int
  services       Service[]

  @@map("schedule")
}
